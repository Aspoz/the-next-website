%h1= t('.coming_week')

%table.event-list
  - previous_date = nil
  - Event.upcoming.each do |event|
    - date = event.starting_at.to_date
    - if previous_date != date
      - previous_date = date
      %tr
        %th(colspan='2')
          - if date.today?
            = t('.today')
          - else
            = l(date, format: '%A').titleize
    %tr
      %td= l event.starting_at, format: '%H:%M'
      %td= event.title

%p= link_to t('.full_agenda'), google_calendar_path
